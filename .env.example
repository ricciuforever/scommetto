# Football API
FOOTBALL_API_KEY=your_football_api_key_here

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Betfair Integration
# Use the LIVE key for real bets
BETFAIR_APP_KEY_LIVE=YOUR_LIVE_APP_KEY
BETFAIR_APP_KEY_DELAY=YOUR_DELAY_APP_KEY
BETFAIR_USERNAME=your_username
BETFAIR_PASSWORD=YOUR_BETFAIR_PASSWORD

# Path to Betfair SSL Certificate and Key (required for real money bets)
# You need to generate these and place them on the server
BETFAIR_CERT_PATH=/var/www/vhosts/emanueletolomei.it/certs/betfair.pem
BETFAIR_KEY_PATH=/var/www/vhosts/emanueletolomei.it/certs/betfair.key

# Betfair Identity URL (Standard IT for Italian accounts)
BETFAIR_SSO_URL=https://identitysso.betfair.it/api/certlogin
